{
  "name": "ai-writer",
  "version": "1.0.2",
  "description": "AI-assisted text writing with configurable recipes. Uses OpenAI's API.",
  "keywords": [
    "AI",
    "ChatGPT",
    "openAI"
  ],
  "author": "Serge van den Oever",
  "license": "MIT",
  "homepage": "https://svdoever.github.io/ai-writer/#/",
  "repository": {
    "type": "git",
    "url": "https://github.com/svdoever/ai-writer.git"
  },
  "main": "./dist/index.js",
  "bin": {
    "ai-writer": "./dist/index.js"
  },
  "scripts": {
    "prepare": "npm run build && chmod +x ./dist/index.js",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "publish-next": "npm version patch && npm publish",
    "docsify:serve": "docsify serve docs --port 3300",
    "debug": "cd recipes/car-description && ai-writer car-description --name \"Citroen C6\" --type \"Diesel\" --range \"950\" --output \"Citroen C6 test\"  --verbose --dry-run"
  },
  "dependencies": {
    "commander": "^10.0.1",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "fs-extra": "^11.1.1",
    "load-module": "^4.2.1",
    "loglevel": "^1.8.1",
    "module-from-string": "^3.3.0",
    "node-fetch": "^3.3.1",
    "openai": "^3.2.1",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.2",
    "@types/figlet": "^1.5.5",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.0",
    "@types/loglevel": "^1.6.3",
    "@types/node": "^18.15.12",
    "@types/shelljs": "^0.8.11",
    "ai-writer": "^1.0.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
