{
    "name": "ai-writer",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "libs/*",
        "docs"
    ],
    "scripts": {
        "dev": "concurrently --kill-others 'npm:dev:docs' 'npm:dev:ai-writer' 'npm:dev:create-ai-writer'",
        "dev:docs": "npm run start --workspace=docs -- --port 3400",
        "dev:ai-writer": "npm run watch --workspace=apps/ai-writer",
        "dev:create-ai-writer": "npm run watch --workspace=apps/create-ai-writer"
    },
    "devDependencies": {
        "concurrently": "^8.0.1"
    },
    "engines": {
        "node": ">=18"
    }
}
